		<script src="../js/jquery-3.1.0.min.js" type="text/javascript" charset="utf-8"></script>
		<script src="../js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init();
			var num=1;
			mui('body').on('tap','.sortbtnbox .mui-flex1',function(){
				num+=1;
				var findup=$(this).find('.uptrigon');
				var finddown=$(this).find('.downtrigon');
				if($(this).hasClass('active')){ 
					if(num%2==0){
						finddown.css('border-top-color','red');
						findup.css('border-bottom-color','darkgray'); 
					}else{
						finddown.css('border-top-color','darkgray');
						findup.css('border-bottom-color','red'); 
					}
				}else{
					num=1;
					finddown.css('border-top-color','darkgray');
					findup.css('border-bottom-color','red'); 
					$(this).addClass('active').siblings().removeClass('active');
					$(this).siblings().find('.uptrigon').css('border-bottom-color','darkgray');
					$(this).siblings().find('.downtrigon').css('border-top-color','darkgray');
				}
			});
		</script>
