<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>标签</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="../css/iconfont.css"/>
		<link rel="stylesheet" type="text/css" href="../css/style.css"/>
		<style type="text/css">
			body{background: white;}
			li span{line-height: 40px;}
			.mui-icon{line-height: 40px;color: #cbcbd0;}
			.mui-table-view-cell:after{left: 70px;}
			.roundbg{margin-right: 12px;}
			.vipitem{margin: 0 20px;}
			.roundbg div{color: white;font-size: 22px;}
			.mui-content>.mui-table-view:first-child{margin-top:1px ;}
		</style>
	</head>

	<body>
		<!--顶部选项卡-->
		<div id="slider" class="mui-slider">
			<div id="sliderSegmentedControl" class=" mui-segmented-control mui-segmented-control-inverted">
				<span class="vipitem">
					会员
				</span>
				<span class="vipitem activenav">
					标签
				</span>
				<span class="vipitem">
					消息
				</span>
			</div>
			<span class="iconfont icon-tubiao04" style="color: #ff821c;position: absolute;right: 20px;top: 14px;font-size: 22px;"></span>
		</div>
		<div class="mui-content">
			<!--访问数量列表-->
		    <ul class="mui-table-view">
				<li class="mui-table-view-cell">
					<div class="roundbg">
						<div class="iconfont icon-biaoqian"></div>
					</div>
					今日推荐回访(<span id="todaynum">0</span>)
					<span class="mui-pull-right mui-icon mui-icon-forward"></span>
				</li>
				<li class="mui-table-view-cell">
					<div class="roundbg">
						<div class="iconfont icon-biaoqian"></div>
					</div>
					果果(<span id="usernum">1</span>)
					<span class="mui-pull-right mui-icon mui-icon-forward"></span>
				</li>
				<li class="mui-table-view-cell">
					<div class="roundbg">
						<div class="iconfont icon-biaoqian"></div>
					</div>
					测试(<span id="testnum">1</span>)
					<span class="mui-pull-right mui-icon mui-icon-forward"></span>
				</li>
				<li class="mui-table-view-cell">
					<div class="roundbg">
						<div class="iconfont icon-biaoqian"></div>
					</div>
					成都(<span id="citynum">3</span>)
					<span class="mui-pull-right mui-icon mui-icon-forward"></span>
				</li>
			</ul>
		</div>
		
		<script src="../js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init()
		</script>
	</body>

</html>