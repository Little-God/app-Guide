<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="../css/iconfont.css" />
		<link rel="stylesheet" type="text/css" href="../css/style.css" />
		<style type="text/css">
			.icon-jia {
				width: 20px;
				height: 20px;
				background: #4cd964;
				color: white;
				display: inline-block;
				text-align: center;
				border-radius: 10px;
				line-height: 23px;
				margin-right: 20px;
			}
			
			.pond-content-padded {
				margin-left: 60px !important;
			}
			.pond-content-padded label~input:before {
				right: 15px;
				content: '\e583';
				font-family: Muiicons;
				font-size: inherit;
				line-height: 1;
				position: absolute;
				top: 50%;
				display: inline-block;
				-webkit-transform: translateY(-50%);
				transform: translateY(-50%);
				text-decoration: none;
				color: #bbb;
				-webkit-font-smoothing: antialiased;
			}
		</style>
	</head>

	<body>
		<!--头部-->
		<header class="mui-bar mui-bar-nav">
			<button type="button" class="mui-left mui-action-back mui-btn  mui-btn-link mui-btn-nav mui-pull-left">
					<span class="mui-icon mui-icon-left-nav"></span>返回
				</button>
			<h1 class="mui-title">发布商品</h1>
			<button class="mui-btn mui-btn-blue mui-btn-link mui-pull-right" id="headSearch">完成</button>
		</header>
		<!--内容-->
		<div class="mui-content">
			<!--商品图片-->
			<div class="shopimg">
				<div class="addimg mui-pull-left">
					<span class="iconfont icon-xiangji" style="font-size: 30px;">
						
					</span>
				</div>
				<img src="../images/arclist/face.png" />
			</div>
			<!--商品详情-->
			<form class="mui-input-group">
				<div class="mui-input-row">
					<label>名称</label>
					<input type="text" placeholder="建议15字以内(必填)">
				</div>
				<div class="mui-input-row">
					<label>品类</label>
					<input type="text" class="mui-input-clear" placeholder="办公桌" data-input-clear="5">
				</div>
				<div class="mui-input-row">
					<label>款号</label>
					<input type="text" class="mui-input-clear" placeholder="请输入商品的款号" data-input-clear="5">
				</div>

			</form>
			<!--商品规格-->
			<h5></h5>
			<form class="mui-input-group ">
				<div class="mui-input-row pond-content-padded">
					<label>货号</label>
					<input type="text" placeholder="建议15字以内(必填)">
				</div>
				<div class="mui-input-row pond-content-padded">
					<label>尺码</label>
					<input type="text" class="mui-input-clear" placeholder="办公桌" data-input-clear="5">
				</div>
				<div class="mui-input-row mui-password">
					<label>条码</label>
					<input type="text" class="mui-input-clear" placeholder="请输入商品的款号" data-input-clear="5"><span class="mui-icon mui-icon-eye mui-active"></span>
				</div>
				
				<div class="mui-input-row pond-content-padded">
					<label>库存</label>
					<input type="text" class="mui-input-clear" placeholder="请输入商品的款号" data-input-clear="5">
				</div>
			</form>
			<!--添加规格-->
			<ul class="mui-table-view addtypebox">
				<li class="mui-table-view-cell"><span class="iconfont icon-jia"></span><span class="addtypetxt">添加规格</span></li>
			</ul>
		</div>
		<script src="../js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init()
		</script>
	</body>

</html>